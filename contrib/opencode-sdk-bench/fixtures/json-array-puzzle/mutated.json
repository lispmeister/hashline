{
  "pipeline": {
    "stages": [
      {
        "name": "build",
        "steps": [
          {"name": "install", "command": "npm install"},
          {"name": "compile", "command": "npm run build"}
        ]
      },
      {
        "name": "test",
        "steps": [
          {"name": "unit", "command": "npm test"},
          {"name": "lint", "command": "npm run lint"}
        ]
      },
      {
        "name": "deploy",
        "steps": [
          {"name": "build", "command": "docker build -t app:latest ."},
          {"name": "push", "command": "docker push app"},
          {"name": "release", "command": "kubectl apply -f deploy.yaml"}
        ]
      }
    ]
  }
}
